{
  "variables": {
    "aws_region": "us-east-1",
    "docker_ucp_ver": "2.2.5"
  },
  "builders":
  [
    {
      "name": "dockeree-ami",
      "ami_name": "dockeree-centos7-{{isotime | clean_ami_name}}",
      "ami_description": "An Amazon Linux AMI that has Docker EE and dependencies installed.",
      "instance_type": "t2.small",
      "region": "{{user `aws_region`}}",
      "type": "amazon-ebs",
      "tags": {
        "Name": "docker-ee"
      },
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "architecture": "x86_64",
          "name": "CentOS Linux 7*",
          "root-device-type": "ebs"
        },
        "owners": ["679593333241"],
        "most_recent": true
      },
      "ssh_username": "centos"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum update -y",
        "sudo yum makecache fast",
        "sudo yum -y install yum-utils chrony dnsmasq bind-utils epel-release",
        "sudo yum -y install jq",
        "sudo systemctl enable dnsmasq",
        "echo 'server=/consul/127.0.0.1#8600' | sudo tee /etc/dnsmasq.d/10-consul",
        "echo 'prepend domain-name-servers 127.0.0.1;' | sudo tee --append /etc/dhcp/dhclient.conf",
        "echo 'prepend domain-search \"consul\", \"node.consul\";' | sudo tee --append /etc/dhcp/dhclient.conf",
        "echo 'server 169.254.169.123 prefer iburst' | sudo tee --append /etc/chrony.conf",
        "sudo -E sh -c 'echo https://storebits.docker.com/ee/centos/sub-cee6347f-1de9-4e4b-a14c-f035d2e81cce/centos > /etc/yum/vars/dockerurl'",
        "sudo -E yum-config-manager --add-repo 'https://storebits.docker.com/ee/centos/sub-cee6347f-1de9-4e4b-a14c-f035d2e81cce/centos/docker-ee.repo'",
        "sudo yum -y install docker-ee",
        "sudo mkdir /etc/docker"
      ]
    },
    {
      "type": "file",
      "source": "daemon.tpl",
      "destination": "/tmp/daemon.json"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv /tmp/daemon.json /etc/docker/",
        "sudo systemctl enable docker",
        "sudo systemctl start docker",
        "sudo docker image pull docker/ucp:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-agent:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-cfssl:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-compose:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-controller:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-auth:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-swarm:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-etcd:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-hrm:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-metrics:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-dsinfo:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/ucp-auth-store:{{user `docker_ucp_ver`}}",
        "sudo docker image pull docker/dtr:latest",
        "sudo docker image pull library/consul:latest"
      ]
    }
  ]
}
